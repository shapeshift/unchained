{
  "name": "unchained",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=14.17"
  },
  "workspaces": [
    "packages/**/*",
    "coinstacks/**/*",
    "pulumi"
  ],
  "scripts": {
    "build": "lerna run build --scope @shapeshiftoss/* --ignore @shapeshiftoss/unchained-client && lerna run build --scope @shapeshiftoss/unchained-client",
    "clean": "lerna run clean --scope @shapeshiftoss/* && rm -rf coverage dist node_modules",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint '*/**/*.{js,ts}' && yarn lint:ts",
    "lint:ts": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "version:major": "lerna version major --force-publish --no-push",
    "version:minor": "lerna version minor --force-publish --no-push",
    "version:patch": "lerna version patch --force-publish --no-push"
  },
  "dependencies": {
    "@pulumi/kubernetes": "3.6.3",
    "@pulumi/pulumi": "3.11.0",
    "dotenv": "^10.0.0",
    "lerna": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^14.14.7",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
